{
    "openapi": "3.0.0",
    "info": {
      "title": "Batik Detection API",
      "version": "1.0.0",
      "description": "API Documentation for Batik Detection Application"
    },
    "paths": {
      "/user/register": {
        "post": {
          "summary": "User Registration",
          "description": "Registers a new user.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "username",
                    "email",
                    "password"
                  ]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User successfully registered.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "User registered successfully."
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid data or user already exists."
            }
          }
        }
      },
      "/user/login": {
        "post": {
          "summary": "User Login",
          "description": "Logs in a user.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "email",
                    "password"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Login successful.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "token": {
                        "type": "string",
                        "example": "jwt_token"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Incorrect email or password."
            }
          }
        }
      },
      "/user/logout": {
        "post": {
          "summary": "User Logout",
          "description": "Logs out a user. Requires authentication token.",
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "required": true,
              "schema": {
                "type": "string",
                "example": "Bearer jwt_token"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Logout successful.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "Logged out successfully."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/user/scan": {
        "post": {
          "summary": "Scan Batik",
          "description": "Scans a batik image to detect the type and origin of the batik.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "image": {
                      "type": "string",
                      "description": "Base64 encoded image"
                    }
                  },
                  "required": [
                    "image"
                  ]
                }
              }
            }
          },
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "required": true,
              "schema": {
                "type": "string",
                "example": "Bearer jwt_token"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Scan successful, batik information returned.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "batik_type": {
                        "type": "string",
                        "example": "Batik Parang"
                      },
                      "origin": {
                        "type": "string",
                        "example": "Yogyakarta"
                      },
                      "description": {
                        "type": "string",
                        "example": "Batik Parang is a traditional pattern from Yogyakarta..."
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid image."
            }
          }
        }
      },
      "/user/upload": {
        "post": {
          "summary": "Upload Batik Photo",
          "description": "Uploads a batik photo to be stored in the system and detects the type and origin of the batik.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "image": {
                      "type": "string",
                      "description": "Base64 encoded image"
                    },
                    "description": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "image",
                    "description"
                  ]
                }
              }
            }
          },
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "required": true,
              "schema": {
                "type": "string",
                "example": "Bearer jwt_token"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Batik photo successfully uploaded and detected.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "batik_type": {
                        "type": "string",
                        "example": "Batik Parang"
                      },
                      "origin": {
                        "type": "string",
                        "example": "Yogyakarta"
                      },
                      "description": {
                        "type": "string",
                        "example": "Batik Parang is a traditional pattern from Yogyakarta..."
                      },
                      "message": {
                        "type": "string",
                        "example": "Batik image uploaded and detected successfully."
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid data."
            }
          }
        }
      },
      "/user/batik": {
        "get": {
          "summary": "List Batik",
          "description": "Retrieves a list of all batik stored in the system.",
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "required": true,
              "schema": {
                "type": "string",
                "example": "Bearer jwt_token"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Batik list successfully retrieved.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "batik_type": {
                          "type": "string",
                          "example": "Batik Parang"
                        },
                        "origin": {
                          "type": "string",
                          "example": "Yogyakarta"
                        },
                        "description": {
                          "type": "string",
                          "example": "Batik Parang is a traditional pattern from Yogyakarta..."
                        },
                        "image_url": {
                          "type": "string",
                          "example": "http://example.com/images/batik_parang.jpg"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
}
  